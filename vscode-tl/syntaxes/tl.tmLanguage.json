{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "TensorLogic",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.tl",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.tl",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.tl",
                    "match": "\\\\."
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.tl",
                    "match": "\\b(tensor|relation|fn|impl|let|if|else|sum|for|where|in)\\b"
                },
                {
                    "name": "keyword.other.tl",
                    "match": "(\\:-|\\?\\-)"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.tl",
                    "match": "\\b(f32|i64)\\b"
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.tl",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        "operators": {
            "name": "keyword.operator.tl",
            "match": "(\\=|\\+|\\-|\\*|\\/|\\<|\\>|!|\\.|\\,|\\;|\\:)"
        },
        "functions": {
            "name": "entity.name.function.tl",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\()"
        }
    },
    "scopeName": "source.tl"
}