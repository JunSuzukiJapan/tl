{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "TensorLogic",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.tl",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.tl",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.tl",
                    "match": "\\\\."
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.tl",
                    "match": "\\b(if|else|for|while|in|return|break|continue|match)\\b"
                },
                {
                    "name": "keyword.other.tl",
                    "match": "\\b(fn|let|struct|enum|impl|mod|use|as|where|tensor|relation)\\b"
                },
                {
                    "name": "constant.language.tl",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "keyword.operator.arrow.tl",
                    "match": "(<-|=>)"
                },
                {
                    "name": "support.function.aggregate.tl",
                    "match": "\\b(sum|max|min|avg|count)\\b(?=\\s*\\()"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.primitive.tl",
                    "match": "\\b(f32|f64|i32|i64|bool|usize|void|entity)\\b"
                },
                {
                    "name": "storage.type.container.tl",
                    "match": "\\b(Tensor)\\b"
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.tl",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        "operators": {
            "name": "keyword.operator.tl",
            "match": "(\\=|\\+|\\-|\\*|\\/|\\<|\\>|!|\\.|\\,|\\;|\\:|\\.\\.|\\:\\:)"
        },
        "functions": {
            "name": "entity.name.function.tl",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*\\()"
        }
    },
    "scopeName": "source.tl"
}